{
    "manifest_version": 3,
    "name": "Kurabiye",
    "version": "1.0",
    "permissions": [
        "cookies",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/src/runtime/router.ts"
            ],
            "media": []
        }
    ]
}
