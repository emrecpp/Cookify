{
    "manifest_version": 3,
    "name": "Kurabiye",
    "version": "1.0",
    "permissions": [
        "cookies",
        "activeTab",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "96": "icon/96.png",
        "128": "icon/128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon/16.png",
            "32": "icon/32.png",
            "48": "icon/48.png",
            "96": "icon/96.png",
            "128": "icon/128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/src/runtime/router.ts"
            ],
            "media": []
        }
    ]
}
